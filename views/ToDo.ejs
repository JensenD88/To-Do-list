<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesToDo.css">
    <link rel="icon" type ="image/x-icon "  href="/images/favicon4.png">
    <title>TaskMinder</title>
</head>
<body>
    <%- include("partials/header.ejs") %> 
    <div class="container my-1">
        <div class="row p-3 pb-0 pe-lg-0 pt-lg-3 align-items-center rounded-3">
            <div class="col-lg-7 p-3 p-lg-5 pt-lg-3 mx-auto">

                <div class="form-signin w-100 m-auto">
                       <form action="/ToDo" method="post">
                       <h1 class="h3 mb-3 fw-normal text-center">Welcome <%=name%></h1>
                   
                     <p class="mt-3 mb-3 text-center text-body-secondary ">select the User you wish to assign the tasks to! </p>
                               
                      <select class="form-select form-select-lg mb-3" name="usersList">
                         
                       <% UserList.forEach(function (name){ %>
                     <option name = "userAssigned" value ='<%= name%>'><%= name%></option>
                     <%  }) %>
                              </select>
                              
                              <div class="input-group mb-3">
                                <input class="form-control" placeholder="Type in your Tasks!" type="text" name = "tasks">
                               <button class="btn btn-outline-secondary" type="submit" id="btnRefresh" name="button">+</button>
                              </div>
                               
                               </form>
             
                         <form action="/MDelete" method="post">
                            <div class="row p-5 pb-5 pt-lg-2">
                                <div class="form-check TaskDisplay" id="TaskDisplay">
                                 <% AllTasks.forEach( (name)=>{ %>
                                       <input class="input" onChange="this.form.submit()" type = "checkbox" name="taskList" value = '<%= name%>' > <%= name%> </input> <br>
                                 <%  }) %>
                             </div>
                            </div>
                              
                         </form>
                      </div>
      
                  </div>
              </div>
        
          </div>
    
   
        
    <script>
       var button = document.getElementById('btnRefresh');
button.onclick = function() {
  location.assign('/ToDo');
}
    </script>
    
    <%- include("partials/footer.ejs") %> 
</body>
</html>